set     PATH_PROGS = "$PATH_PROGS $SYN_BIN_PT"
setenv  MANPATH      ${MANPATH}:$SYNOPSYS_PT/doc/syn/man
alias   ptman        'man -M $SYNOPSYS_PT/doc/pt/man'

# MC set-up
