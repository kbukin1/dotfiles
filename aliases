# aliases to change titles of tmux's windows
if ( $?TMUX ) then
    # alias postcmd 'printf "\033k%s\033\\" "\!#:0:t"' # ruins history
    alias postcmd 'printf "\033k%s\033\\" `history -h 1|cut -d" " -f1| rev | cut -d/ -f1 | rev`'
    alias precmd  'printf "\033ktcsh\033\\"'
endif

