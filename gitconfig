    email = kbukin@nvidia.com
[color]
    diff = auto
	ui = true
[core]
    editor = vim
	excludesfile = ~/.gitignore
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	lg1 = log --graph --abbrev-commit --decorate --all --format=format:\"%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(dim white) - %an%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n %C(white)%s%C(reset)\"
  st = status -sb
  dt = difftool
	br = branch
	co = checkout
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
