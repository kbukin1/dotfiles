PROMPT_COMMAND=__prompt_command # Func to gen PS1 after CMDs

__prompt_command() {
    local EXIT="$?"             # This needs to be first
    PS1=""
    local RCol='\[\e[0m\]'

    local Red='\[\e[0;31m\]'
    local Gre='\[\e[0;32m\]'
    local Blu='\[\e[0;34m\]'

    if [ $EXIT != 0 ]; then
        PS1+="${Red}\h${RCol}"   # Add red if exit code non 0
    else
        PS1+="${Gre}\h${RCol}"
    fi

    PS1+="${RCol}:${Blu}\W${RCol}\$"
}

